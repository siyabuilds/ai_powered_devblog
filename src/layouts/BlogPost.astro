---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.prose {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 2em 1em;
				color: rgba(var(--gray-dark), 0.9);
			}
			.title {
				margin-bottom: 2em;
				padding: 2em;
				text-align: center;
				background: var(--card-gradient);
				border-radius: 16px;
				border: 1px solid rgba(var(--purple-200), 0.5);
				box-shadow: var(--card-shadow);
				backdrop-filter: blur(10px);
			}
			.title h1 {
				margin: 0 0 1em 0;
				color: var(--primary-dark);
				font-size: 2.5rem;
				line-height: 1.2;
			}
			.date {
				margin-bottom: 0.5em;
				color: rgba(var(--gray-dark), 0.7);
				font-weight: 500;
				text-transform: uppercase;
				letter-spacing: 0.5px;
				font-size: 0.9rem;
			}
			.last-updated-on {
				font-style: italic;
				color: rgba(var(--gray-dark), 0.6);
				margin-top: 0.5em;
			}
			.prose hr {
				border: none;
				border-top: 2px solid rgba(var(--purple-200), 0.5);
				margin: 1.5em 0;
			}
			.prose h1, .prose h2, .prose h3, .prose h4, .prose h5, .prose h6 {
				color: var(--primary-dark);
			}
			.prose h2 {
				border-bottom: 2px solid rgba(var(--purple-200), 0.5);
				padding-bottom: 0.5rem;
				margin-top: 2.5rem;
			}
			.prose h3 {
				color: var(--accent);
				margin-top: 2rem;
			}
			.prose blockquote {
				border-left: 4px solid var(--accent);
				background: rgba(var(--purple-50), 0.5);
				border-radius: 0 8px 8px 0;
			}
			.prose ul li {
				margin-bottom: 0.5rem;
			}
			.prose strong {
				color: var(--primary-dark);
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="prose">
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1>{title}</h1>
						<hr />
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
