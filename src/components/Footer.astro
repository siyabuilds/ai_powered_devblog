<style>
	footer {
		background: linear-gradient(135deg, rgba(var(--purple-100), 0.9), rgba(var(--blue-100), 0.7));
		border-top: 1px solid rgba(var(--purple-200), 0.4);
		margin-top: 5rem;
		backdrop-filter: blur(20px);
		position: relative;
	}

	footer::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 2px;
		background: linear-gradient(90deg, var(--accent), var(--secondary), var(--accent));
	}
	
	.footer-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 4rem 2rem 2rem;
	}
	
	.footer-content {
		display: grid;
		grid-template-columns: 2fr 1fr 1fr 1fr;
		gap: 3rem;
		margin-bottom: 3rem;
	}
	
	.brand-section h3 {
		font-size: 1.75rem;
		font-weight: 800;
		color: var(--primary-dark);
		margin: 0 0 1rem 0;
		background: linear-gradient(135deg, var(--primary-dark), var(--accent));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}
	
	.brand-tagline {
		margin: 0 0 1rem 0;
		color: rgba(var(--gray-dark), 0.8);
		font-size: 1.1rem;
		font-weight: 600;
	}

	.brand-description {
		margin: 0;
		color: rgba(var(--gray-dark), 0.7);
		font-size: 0.95rem;
		line-height: 1.6;
	}

	.links-section h4,
	.tech-section h4,
	.social-section h4 {
		font-size: 1rem;
		font-weight: 700;
		color: var(--primary-dark);
		margin: 0 0 1.5rem 0;
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}

	.links-section ul,
	.tech-section ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.links-section li,
	.tech-section li {
		margin-bottom: 0.75rem;
	}

	.links-section a {
		color: rgba(var(--gray-dark), 0.8);
		text-decoration: none;
		font-weight: 500;
		transition: all 0.3s ease;
		border-bottom: none;
	}

	.links-section a:hover {
		color: var(--accent);
		border-bottom: none;
		transform: translateX(4px);
	}

	.tech-section li {
		color: rgba(var(--gray-dark), 0.8);
		font-weight: 500;
		font-size: 0.95rem;
		display: flex;
		align-items: center;
		gap: 0.75rem;
	}

	.tech-section li i {
		color: var(--accent);
		width: 20px;
		text-align: center;
		flex-shrink: 0;
	}
	
	.social-links {
		display: flex;
		gap: 1rem;
	}
	
	.social-link {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 44px;
		height: 44px;
		background: rgba(255, 255, 255, 0.8);
		border: 1px solid rgba(var(--purple-200), 0.5);
		border-radius: 12px;
		color: rgba(var(--gray-dark), 0.7);
		text-decoration: none;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		backdrop-filter: blur(10px);
	}
	
	.social-link:hover {
		background: rgba(var(--purple-100), 0.9);
		border-color: var(--accent);
		color: var(--accent);
		transform: translateY(-4px);
		box-shadow: 0 8px 20px rgba(var(--accent), 0.2);
		border-bottom: 1px solid rgba(var(--purple-200), 0.5);
	}
	
	.footer-bottom {
		padding-top: 2rem;
		border-top: 1px solid rgba(var(--purple-200), 0.3);
		text-align: center;
	}
	
	.copyright-section p {
		margin: 0 0 0.5rem 0;
		color: rgba(var(--gray-dark), 0.7);
		font-size: 0.9rem;
	}
	
	.powered-by {
		font-size: 0.85rem;
		font-weight: 600;
		background: linear-gradient(90deg, var(--accent), var(--secondary));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		text-transform: uppercase;
		letter-spacing: 0.1em;
	}
	
	@media (max-width: 768px) {
		.footer-container {
			padding: 3rem 1.5rem 2rem;
		}
		
		.footer-content {
			grid-template-columns: 1fr;
			gap: 2.5rem;
			text-align: center;
		}

		.social-links {
			justify-content: center;
		}
	}
</style>
