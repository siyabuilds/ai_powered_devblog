---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
				max-width: calc(100% - 2rem);
			}
			.blog-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
				gap: 2rem;
				list-style-type: none;
				margin: 2rem 0;
				padding: 0;
			}
			.blog-card {
				background: var(--card-gradient);
				border: 1px solid rgba(var(--purple-200), 0.5);
				border-radius: 16px;
				padding: 1.5rem;
				transition: all 0.3s ease;
				box-shadow: var(--card-shadow);
				backdrop-filter: blur(10px);
				height: fit-content;
			}
			.blog-card:hover {
				transform: translateY(-4px);
				box-shadow: var(--card-shadow-hover);
				border-color: rgba(var(--accent), 0.3);
			}
			.blog-card a {
				text-decoration: none;
				color: inherit;
				display: block;
				height: 100%;
			}
			.blog-title {
				margin: 0 0 0.75rem 0;
				color: var(--primary-dark);
				line-height: 1.3;
				font-size: 1.5rem;
				font-weight: 700;
				transition: color 0.2s ease;
			}
			.blog-card:hover .blog-title {
				color: var(--accent);
			}
			.blog-date {
				margin: 0 0 1rem 0;
				color: rgba(var(--gray-dark), 0.7);
				font-size: 0.9rem;
				font-weight: 500;
				text-transform: uppercase;
				letter-spacing: 0.5px;
			}
			.blog-description {
				margin: 0;
				color: rgba(var(--gray-dark), 0.85);
				line-height: 1.6;
				font-size: 1rem;
			}
			.featured-post {
				grid-column: 1 / -1;
				background: linear-gradient(135deg, rgba(var(--purple-100), 0.8), rgba(var(--blue-100), 0.6));
				border: 2px solid rgba(var(--accent), 0.2);
			}
			.featured-post .blog-title {
				font-size: 2rem;
				margin-bottom: 1rem;
			}
			.featured-post .blog-description {
				font-size: 1.1rem;
			}
			@media (max-width: 720px) {
				.blog-grid {
					grid-template-columns: 1fr;
					gap: 1.5rem;
					margin: 1rem 0;
				}
				.blog-card {
					padding: 1.25rem;
				}
				.featured-post .blog-title {
					font-size: 1.75rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<h1 style="text-align: center; color: var(--primary-dark); margin-bottom: 2rem;">Blog Posts</h1>
				<ul class="blog-grid">
					{
						posts.map((post, index) => (
							<li class={`blog-card ${index === 0 ? 'featured-post' : ''}`}>
								<a href={`/blog/${post.id}/`}>
									<h3 class="blog-title">{post.data.title}</h3>
									<p class="blog-date">
										<FormattedDate date={post.data.pubDate} />
									</p>
									{post.data.description && (
										<p class="blog-description">{post.data.description}</p>
									)}
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
